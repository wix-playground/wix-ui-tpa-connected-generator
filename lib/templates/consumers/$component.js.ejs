import React from 'react'
<% if (hasStyle) { %>
  import styles from './<%=componentName%>.st.css'
<% } %>
import {<%=componentName%>} from '<%=componentModuleName%>/<%=componentName%>'

export const <%=componentName%>Ext = React.forwardRef((props, ref) => {
  <% if (namespace && hasStyle) { %>
    const namespace = '<%=namespace%>'
    props = {...props}
    props.className = props.className ? `${props.className} ${namespace}` : namespace
  <% } %>
  <% if (hasStyle) { %>
    props = {...props, ...styles('root', {}, props)}
  <% } %>
  return React.createElement(<%=componentName%>, {...props, ref, ...styles('root', {}, props)})
});
